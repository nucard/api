{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "arrow-parens": false,
        "max-classes-per-file": false,
        "max-line-length": [
            true,
            {
                "limit": 180,
                "ignore-pattern": "\\S+"
            }
        ],
        "quotemark": [
            false
        ],
        "no-console": [
            false
        ],
        "object-literal-sort-keys": false,
        "variable-name": [
            false
        ]
    },
    "rulesDirectory": []
}